<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="3"
    android:textAlignment="center"
    android:clipToPadding="false">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_column="0"
        android:clipToPadding="false"
        android:id="@+id/showView">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:id="@+id/sponsorView">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:src="@drawable/sponsor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="presents"
                android:id="@+id/textView5"
                android:textStyle="italic"
                android:layout_toRightOf="@+id/imageView2"
                android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:clipToPadding="false"
            android:id="@+id/briefView"
            android:layout_below="@+id/sponsorView">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/eventBrief"
                android:layout_row="0"
                android:layout_column="0"
                android:padding="0dp"
                android:baselineAlignBottom="false"
                android:clickable="false"
                android:cropToPadding="false"
                android:layout_columnSpan="3"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                tools:src="@drawable/image" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:background="#22ffffff"/>

            <TextView
                tools:text="We are Animals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleText"
                android:layout_column="0"
                android:textSize="14sp"
                android:textColor="#ffffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

            <TextView
                tools:text="Wrangler says We are animals. Prove it with the best picture you can come up with."
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/briefText"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="#ffffffff"
                android:padding="8dp"
                android:maxLength="300"
                android:lines="2"
                android:gravity="center_vertical|left"
                android:background="#32ffffff"
                android:layout_alignParentEnd="false"
                android:layout_alignBottom="@+id/eventBrief"
                android:textSize="10sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countdown"
                android:src="@drawable/count"
                android:background="#00ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentLeft="true"
                android:padding="6dp" />

            <TextView
                tools:text="22 hr\n36 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timerText"
                android:textStyle="bold"
                android:textColor="#ffffffff"
                android:layout_alignParentEnd="true"
                android:textSize="10sp"
                android:paddingTop="2dp"
                android:paddingRight="30dp"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="1.5dp"
            android:background="#ffffffff"
            android:clipToPadding="false"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/briefView"
            android:layout_marginTop="-50dp"
            android:id="@+id/myEntryView">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/myEntry"
                android:layout_alignParentEnd="false"
                android:adjustViewBounds="false"
                android:src="@drawable/image" />
        </RelativeLayout>

        <com.shamanland.fonticon.FontIconView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_camera"
            android:textSize="@dimen/icon_size"
            android:textColor="@color/red"
            android:clickable="true"
            />

        <FrameLayout
            android:id="@+id/sample_content_fragment"
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:id="@+id/profileBtn"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/sample_content_fragment"
            android:onClick="onProfileViewClick"
            android:visibility="invisible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitBtn"
            android:layout_alignParentBottom="false"
            android:src="@drawable/submit"
            android:clickable="true"
            android:background="#00ffffff"
            android:onClick="submitEntryClick"
            android:paddingBottom="5dp"
            android:layout_below="@+id/briefView"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp" />

    </RelativeLayout>

</GridLayout>