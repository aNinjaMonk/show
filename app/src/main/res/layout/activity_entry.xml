<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/entryView"
            android:src="@drawable/sample_1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeBtn"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignRight="@+id/entryView"
            android:onClick="closeBtnListener"
            android:background="#00ffffff"
            android:layout_alignTop="@+id/entryView"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loveBtn"
            android:layout_below="@+id/entryView"
            android:src="@android:drawable/btn_star"
            android:layout_centerHorizontal="true"
            android:onClick="loveBtnListener" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentBtn"
            android:layout_below="@+id/entryView"
            android:src="@android:drawable/sym_action_chat"
            android:onClick="commentBtnListener" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/commentBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/commentBtn"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postBtn"
            android:layout_below="@+id/loveBtn"
            android:layout_toRightOf="@+id/commentBox"
            android:layout_toEndOf="@+id/loveBtn"
            android:onClick="postBtnListener" />
    </RelativeLayout>
</LinearLayout>